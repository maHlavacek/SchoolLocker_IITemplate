@page
@model SchoolLocker.Web.Pages.Bookings.LockerBookingModel
@{
    ViewData["Title"] = "Locker Booking";
}

<h2>Create Booking</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            @* TODO: Formular zur Buchung eines Spinds erstellen *@
            @*<div>
                <input asp-for="@Model.Booking" class="form-control" type="hidden" />
            </div>*@
            <div class="form-group">
                <label asp-for="@Model.Booking.Locker.Number" class="control-label" ></label>
                <input asp-for="@Model.Booking.Locker.Number" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Pupils"  class="control-label"></label>
                <select asp-for="@Model.Pupils" class="form-control" asp-items="@Model.Pupils"></select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Booking.From" class="control-label"></label>
                <input asp-for="@Model.Booking.From" class="form-control" type="date"/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Booking.To" class="control-label"></label>
                <input asp-for="@Model.Booking.To" class="form-control" type="date" />
            </div>
          
        </form>
    </div>
</div>

<div>
    <a asp-page="/Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

