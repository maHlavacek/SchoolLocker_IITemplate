@page
@model SchoolLocker.Web.Pages.Bookings.LockerBookingModel
@{
    ViewData["Title"] = "Locker Booking";
}

<h2>Create Booking</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Booking.LockerId" type="hidden" />
            
            @* TODO: Formular zur Buchung eines Spinds erstellen *@
            
            <div class="form-group">
                <label asp-for="Booking.Locker.Number" class="control-label" ></label>
                <input asp-for="Booking.Locker.Number" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Booking.PupilId"  class="control-label"></label>
                <select asp-for="Booking.PupilId" class="form-control" asp-items="@Model.Pupils"></select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.From" class="control-label"></label>
                <input asp-for="Booking.From" class="form-control" type="date"/>
            </div>
            <div class="form-group">
                <label asp-for="Booking.To" class="control-label"></label>
                <input asp-for="Booking.To" class="form-control" type="date" />
            </div>
            <button asp-page-handler="Create" type="submit" class="btn btn-default">Create</button>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

